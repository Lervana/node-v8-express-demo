{
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "extends": [
    "prettier",
    "eslint:recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "quotes": ["warn", "single", {"avoidEscape": true}],
    "jsx-quotes": ["warn"],
    "semi": ["warn", "always"],
    "prettier/prettier": ["warn"],
    "no-trailing-spaces": ["warn"],
    "no-multiple-empty-lines": ["warn", {
      "max": 2,
      "maxEOF": 1
    }]
  }
}
